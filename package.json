{
  "name": "typedoc-plugin-markdown",
  "version": "2.4.0",
  "description": "A plugin for TypeDoc that enables TypeScript API documentation to be generated in Markdown.",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "npm run lint && npm run build && npm run test",
    "build": "rm -rf dist && tsc && copyfiles --up 1 ./src/**/*.hbs ./dist/",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "build-and-test": "npm run build && npm run test",
    "fixtures": "rm -rf ./test/fixtures && node ./tasks/fixtures.js",
    "snapshots": "rm -rf ./test/snapshots && node ./tasks/link-plugin.js && npm-run-all snapshot:*",
    "snapshot:md": "typedoc --options ./test/options.json --plugin typedoc-plugin-markdown --out ./test/snapshots/md",
    "snapshot:docosaurus": "typedoc --theme docusaurus2 --options ./test/options.json --plugin typedoc-plugin-markdown --out ./test/snapshots/docosaurus",
    "snapshot:html": "typedoc --options ./test/options.json --plugin none --out ./test/snapshots/html"
  },
  "author": "Thomas Grey",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0"
  },
  "bugs": {
    "url": "https://github.com/tgreyuk/typedoc-plugin-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git"
  },
  "keywords": [
    "markdown",
    "typescript",
    "documentation",
    "api",
    "typedocplugin",
    "typedoc"
  ],
  "peerDependencies": {
    "typedoc": ">=0.18.0",
    "typescript": ">=3.8.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.6.0",
    "jest": "^26.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typedoc": ">=0.18.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6"
  }
}
